	</nav>
	
<script>
const btn_menu = document.querySelector('.btn_menu');
const close_menu = document.querySelector('.close_menu');
const menu = document.querySelector('.menu');

btn_menu.onclick = () => {
  menu.classList.add('active');
}
close_menu.onclick = () => {
  menu.classList.remove('active');
}

</script>